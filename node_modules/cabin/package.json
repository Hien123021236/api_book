{
  "name": "cabin",
  "description": "Cabin is a logging/analytics service and middleware for Node.js, Lad, Koa, Express, and Passport",
  "version": "2.0.7",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)",
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "browser": {
    "./src/app-info.js": "./src/app-info.browser.js"
  },
  "bugs": {
    "url": "https://github.com/cabinjs/cabin/issues",
    "email": "niftylettuce@gmail.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)"
  ],
  "dependencies": {
    "axe": "^3.0.3",
    "common-tags": "^1.8.0",
    "fast-safe-stringify": "^2.0.6",
    "lodash": "^4.17.11",
    "on-finished": "^2.3.0",
    "parse-app-info": "^1.0.3",
    "parse-err": "^0.0.5",
    "parse-request": "^0.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "ava": "^1.1.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "caniuse-lite": "^1.0.30000929",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "eslint": "5.12.0",
    "eslint-config-xo-lass": "^1.0.3",
    "eslint-plugin-compat": "^2.6.3",
    "eslint-plugin-node": "^8.0.1",
    "express": "^4.16.4",
    "express-request-id": "^1.4.1",
    "fixpack": "^2.3.1",
    "husky": "^1.3.1",
    "jsdom": "13.1.0",
    "koa": "^2.6.2",
    "koa-connect": "^2.0.1",
    "koa-router": "^7.4.0",
    "lint-staged": "^8.1.0",
    "nyc": "^13.1.0",
    "pino": "^5.10.7",
    "prettier": "^1.15.3",
    "remark-cli": "^6.0.1",
    "remark-preset-github": "^0.0.13",
    "response-time": "^2.3.2",
    "rimraf": "^2.6.3",
    "signale": "^1.3.0",
    "supertest": "^3.4.1",
    "tinyify": "^2.5.0",
    "uglify-js": "^3.4.9",
    "xo": "^0.24.0"
  },
  "engines": {
    "node": ">=8.8.1"
  },
  "files": [
    "lib",
    "dist"
  ],
  "homepage": "https://github.com/cabinjs/cabin",
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jsdelivr": "dist/cabin.min.js",
  "keywords": [
    "airbrake",
    "analytics",
    "app",
    "boilerplate",
    "bugsnag",
    "bunyan",
    "cabin",
    "chalk",
    "color",
    "colored",
    "console",
    "dashboard",
    "express",
    "framework",
    "frontend",
    "gui",
    "hackable",
    "headers",
    "helper",
    "koa",
    "lad",
    "lass",
    "library",
    "log",
    "logging",
    "logging",
    "loggly",
    "logs",
    "middleware",
    "mongo",
    "mongodb",
    "object",
    "passport",
    "passportjs",
    "postgres",
    "postgresql",
    "raven",
    "request",
    "sentry",
    "signale",
    "sql",
    "timber",
    "tool",
    "transport",
    "user",
    "utility",
    "utility",
    "winston"
  ],
  "license": "MIT",
  "lint-staged": {
    "linters": {
      "*.js": [
        "xo --fix",
        "git add"
      ],
      "*.md": [
        "remark . -qfo",
        "git add"
      ],
      "package.json": [
        "fixpack",
        "git add"
      ]
    }
  },
  "main": "lib/index.js",
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cabinjs/cabin"
  },
  "scripts": {
    "ava": "cross-env NODE_ENV=test ava",
    "browserify": "browserify src/index.js -o dist/cabin.js -s Cabin -d -t babelify",
    "build": "npm run build:clean && npm run build:lib && npm run build:dist",
    "build:clean": "rimraf lib dist",
    "build:dist": "npm run browserify && npm run minify",
    "build:lib": "babel src --out-dir lib",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo && eslint lib",
    "minify": "cross-env NODE_ENV=production browserify src/index.js -o dist/cabin.min.js -s Cabin -t babelify -p tinyify",
    "nyc": "cross-env NODE_ENV=test nyc ava",
    "test": "npm run build && npm run lint && npm run ava",
    "test-coverage": "npm run build && npm run lint && npm run nyc"
  },
  "unpkg": "dist/cabin.min.js",
  "xo": {
    "prettier": true,
    "space": true,
    "extends": [
      "xo-lass"
    ],
    "env": [
      "node",
      "browser"
    ],
    "ignore": [
      "config.js"
    ]
  }
}
